# Database Configuration
# Default: PostgreSQL for development (recommended)
DATABASE_URL=postgresql://confida_dev:dev_password@localhost:5432/confida_dev

# Alternative: SQLite for testing only (NOT recommended for development)
# DATABASE_URL=sqlite:///./confida.db

# Production: Use your production PostgreSQL URL
# DATABASE_URL=postgresql://confida:secure_password@prod-host:5432/confida_prod

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Note: Direct AI services removed - using AI service microservice only

# AI Service Microservice Configuration
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_TIMEOUT=30.0
AI_SERVICE_RETRY_ATTEMPTS=3

# Application Configuration
MAX_TOKENS=2000
TEMPERATURE=0.7

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000
EMBEDDING_CACHE_TTL=3600

# Cache Configuration
CACHE_ENABLED=true
CACHE_BACKEND=memory
REDIS_URL=redis://localhost:6379

# Cache TTL Settings (in seconds)
CACHE_TTL_QUESTION_GENERATION=3600
CACHE_TTL_ANSWER_ANALYSIS=1800
CACHE_TTL_TRANSCRIPTION=7200
CACHE_TTL_EMBEDDINGS=86400
CACHE_TTL_SERVICE_STATUS=300
CACHE_TTL_DEFAULT=3600

# Monitoring and Metrics Configuration
MONITORING_ENABLED=true
PROMETHEUS_PORT=8001
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENABLED=true

# Performance Monitoring Thresholds
SLOW_REQUEST_THRESHOLD=5.0
ERROR_RATE_THRESHOLD=5.0
CACHE_HIT_RATE_THRESHOLD=50.0

# TTS (Text-to-Speech) Configuration
# See docs/TTS_CONFIGURATION.md for detailed provider information
#
# Provider options:
#   - "coqui" (default): Local, open-source TTS - no API keys needed, good for development
#   - "elevenlabs": Premium cloud TTS with high-quality voices - requires ELEVENLABS_API_KEY
#   - "playht": Cloud TTS service - requires PLAYHT_API_KEY and PLAYHT_USER_ID
#
# Default: coqui (local, no costs, privacy-friendly)
# Production: Consider using elevenlabs or playht for better voice quality
TTS_PROVIDER=coqui
TTS_FALLBACK_PROVIDER=
TTS_VOICE_VERSION=1
TTS_DEFAULT_VOICE_ID=confida-default-en
TTS_DEFAULT_FORMAT=mp3
TTS_CACHE_TTL=604800
TTS_TIMEOUT=30
TTS_RETRY_ATTEMPTS=3
TTS_MAX_CONCURRENT=5

# TTS Vendor API Keys (only required if using vendor provider)
# 
# ElevenLabs: Premium TTS with natural-sounding voices
# Get API key from: https://elevenlabs.io
# Required if TTS_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=

# PlayHT: Cloud TTS service with enterprise features
# Get credentials from: https://play.ht
# Required if TTS_PROVIDER=playht
PLAYHT_API_KEY=
PLAYHT_USER_ID=
