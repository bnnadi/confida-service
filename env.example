# Database Configuration
# Default: PostgreSQL for development (recommended)
DATABASE_URL=postgresql://interviewiq_dev:dev_password@localhost:5432/interviewiq_dev

# Alternative: SQLite for testing only (NOT recommended for development)
# DATABASE_URL=sqlite:///./interviewiq.db

# Production: Use your production PostgreSQL URL
# DATABASE_URL=postgresql://interviewiq:secure_password@prod-host:5432/interviewiq_prod

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Application Configuration
MAX_TOKENS=2000
TEMPERATURE=0.7

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000
EMBEDDING_CACHE_TTL=3600

# Cache Configuration
CACHE_ENABLED=true
CACHE_BACKEND=memory
REDIS_URL=redis://localhost:6379

# Cache TTL Settings (in seconds)
CACHE_TTL_QUESTION_GENERATION=3600
CACHE_TTL_ANSWER_ANALYSIS=1800
CACHE_TTL_TRANSCRIPTION=7200
CACHE_TTL_EMBEDDINGS=86400
CACHE_TTL_SERVICE_STATUS=300
CACHE_TTL_DEFAULT=3600

# Monitoring and Metrics Configuration
MONITORING_ENABLED=true
PROMETHEUS_PORT=8001
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENABLED=true

# Performance Monitoring Thresholds
SLOW_REQUEST_THRESHOLD=5.0
ERROR_RATE_THRESHOLD=5.0
CACHE_HIT_RATE_THRESHOLD=50.0
